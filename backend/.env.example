# ============================================================================
# FitCheck AI Backend - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values

# Supabase Configuration
# Get these from: Supabase Dashboard > Settings > API Keys
SUPABASE_URL=
SUPABASE_PUBLISHABLE_KEY=
SUPABASE_SECRET_KEY=
SUPABASE_JWT_SECRET=
SUPABASE_STORAGE_BUCKET=fitcheck-images

# Pinecone Vector Database
# Get your API key from: Pinecone Console > API Keys
PINECONE_API_KEY=
PINECONE_INDEX_NAME=fitcheck-items
PINECONE_ENVIRONMENT=
PINECONE_DIMENSION=768

# ============================================================================
# AI Provider Configuration
# ============================================================================
# Supports multiple providers: Gemini, OpenAI, or custom OpenAI-compatible proxy
# Users can configure their own keys in the app, or use system defaults below

# Default Provider: gemini | openai | custom
AI_DEFAULT_PROVIDER=custom

# Gemini Configuration
# Get your API key from: Google AI Studio > API Keys
AI_GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
AI_GEMINI_API_KEY=
AI_GEMINI_CHAT_MODEL=gemini-3-flash-preview
AI_GEMINI_VISION_MODEL=gemini-3-flash-preview
AI_GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview
AI_GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# OpenAI Configuration
# Get your API key from: OpenAI Platform > API Keys
AI_OPENAI_API_URL=https://api.openai.com/v1
AI_OPENAI_API_KEY=
AI_OPENAI_CHAT_MODEL=gpt-4o
AI_OPENAI_VISION_MODEL=gpt-4o
AI_OPENAI_IMAGE_MODEL=dall-e-3

# Custom Provider (OpenAI-compatible proxy, local LLM, etc.)
# Default configuration for local Quotio proxy
AI_CUSTOM_API_URL=http://localhost:8317/v1
AI_CUSTOM_API_KEY=
AI_CUSTOM_CHAT_MODEL=gemini-3-flash-preview
AI_CUSTOM_VISION_MODEL=gemini-3-flash-preview
AI_CUSTOM_IMAGE_MODEL=gemini-3-pro-image-preview

# Rate Limits (per user per day)
AI_DAILY_EXTRACTION_LIMIT=100
AI_DAILY_GENERATION_LIMIT=50
AI_DAILY_EMBEDDING_LIMIT=500

# Encryption key for storing user API keys (generate with: openssl rand -hex 32)
AI_ENCRYPTION_KEY=

# Application Settings (Optional)
DEBUG=false
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated list)
BACKEND_CORS_ORIGINS=https://www.fitcheckaiapp.com,https://fitcheckaiapp.com,http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# Stripe Configuration
# Get your keys from: Stripe Dashboard > Developers > API Keys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_MONTHLY_PRICE_ID=
STRIPE_PRO_YEARLY_PRICE_ID=
