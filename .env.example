# ============================================================================
# FitCheck AI - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# Required for local development (docker-compose) and production deployments

# ============================================================================
# Backend Environment Variables
# ============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_STORAGE_BUCKET=fitcheck-images

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=fitcheck-items
PINECONE_ENVIRONMENT=production
PINECONE_DIMENSION=768

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Application Settings
DEBUG=false
FRONTEND_URL=http://localhost:3000
PORT=8000

# CORS Origins (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Frontend Environment Variables (Vite)
# ============================================================================

# Supabase (Frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# API Base URL (for development when backend is separate)
VITE_API_URL=http://localhost:8000

# ============================================================================
# Optional: Production Deployments
# ============================================================================

# Railway (Backend) - Set these in Railway dashboard, not here
# RAILWAY_ENVIRONMENT=production
# PORT=${PORT}

# Netlify (Frontend) - Set these in Netlify dashboard, not here
# VITE_SUPABASE_URL=
# VITE_SUPABASE_ANON_KEY=
# VITE_API_URL=https://your-backend.railway.app
