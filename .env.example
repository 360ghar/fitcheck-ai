# ============================================================================
# FitCheck AI - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# Required for local development (docker-compose) and production deployments

# ============================================================================
# Backend Environment Variables
# ============================================================================

# Supabase Configuration
# Get these from: Supabase Dashboard > Settings > API Keys
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-key-here
SUPABASE_SECRET_KEY=sb_secret_your-key-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_STORAGE_BUCKET=fitcheck-images

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=fitcheck-items
PINECONE_ENVIRONMENT=production
PINECONE_DIMENSION=768

# ============================================================================
# AI Provider Configuration
# ============================================================================
# Supports multiple providers: Gemini, OpenAI, or custom OpenAI-compatible proxy
# Users can configure their own keys in the app, or use system defaults below

# Default Provider: gemini | openai | custom
AI_DEFAULT_PROVIDER=gemini

# Gemini Configuration
AI_GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta
AI_GEMINI_API_KEY=your-gemini-api-key
AI_GEMINI_CHAT_MODEL=gemini-3-flash-preview
AI_GEMINI_IMAGE_MODEL=gemini-3-flash-preview

# OpenAI Configuration
AI_OPENAI_API_URL=https://api.openai.com/v1
AI_OPENAI_API_KEY=
AI_OPENAI_CHAT_MODEL=gpt-4o
AI_OPENAI_IMAGE_MODEL=dall-e-3

# Custom Provider (OpenAI-compatible proxy, local LLM, etc.)
AI_CUSTOM_API_URL=http://localhost:8317/v1
AI_CUSTOM_API_KEY=
AI_CUSTOM_CHAT_MODEL=
AI_CUSTOM_IMAGE_MODEL=

# Rate Limits (per user per day)
AI_DAILY_EXTRACTION_LIMIT=100
AI_DAILY_GENERATION_LIMIT=50

# Encryption key for storing user API keys (generate with: openssl rand -hex 32)
AI_ENCRYPTION_KEY=

# Legacy Gemini Settings (for embeddings - used by recommendation service)
GEMINI_API_KEY=AIzaSyBTUHTs0J2U4iklLvyO42lCT4dS48_YLCM
GEMINI_MODEL=gemini-3-flash-preview
GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# Application Settings
DEBUG=false
FRONTEND_URL=http://localhost:3000
PORT=8000

# CORS Origins (comma-separated list)
BACKEND_CORS_ORIGINS=https://www.fitcheckaiapp.com,https://fitcheckaiapp.com,http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# ============================================================================
# Frontend Environment Variables (Vite)
# ============================================================================

# Supabase (Frontend)
# Get your publishable key from: Supabase Dashboard > Settings > API Keys
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your-key-here
VITE_API_BASE_URL=http://localhost:8000

# ============================================================================
# Optional: Production Deployments
# ============================================================================

# Railway (Backend) - Set these in Railway dashboard, not here
# RAILWAY_ENVIRONMENT=production
# PORT=${PORT}

# Netlify (Frontend) - Set these in Netlify dashboard, not here
# VITE_SUPABASE_URL=
# VITE_SUPABASE_ANON_KEY=
# VITE_API_URL=https://your-backend.railway.app
